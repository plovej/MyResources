<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 填充的颜色 -->
    <solid android:color="#fff" />
    <!-- android:radius 弧形的半径 -->
    <corners android:radius="8px" />
    <!-- padding：Button里面的文字与Button边界的间隔 -->
    <padding
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp" />
    <!-- 边框的颜色和宽度 -->
    <stroke
        android:width="1dp"
        android:color="#fff" />

</shape>