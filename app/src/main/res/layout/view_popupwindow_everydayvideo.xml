<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/lv_popup"
            android:layout_width="110dp"
            android:layout_height="fill_parent"
            android:layout_margin="1dp"
            android:divider="@null"
            android:listSelector="#00000000"
            android:scrollbars="none" >
        </ListView>

        <RelativeLayout
            android:id="@+id/ll_adv_message"
            android:layout_width="157dp"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@+id/tv_dr"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:id="@+id/ll_avd_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/tv_dr"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_business_name2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/px32_sp" />

                <TextView
                    android:id="@+id/tv_coupon_name2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7dp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/px24_sp" />

                <TextView
                    android:id="@+id/tv_product_number2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:textColor="@color/fanxq_text_33_33_33"
                    android:textSize="@dimen/px28_sp" />

                <TextView
                    android:id="@+id/tv_submit2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/fanxq_corners_no_bg_stroke_app_color"
                    android:gravity="center"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/px28_sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>